<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/frame_layout_league_shop_activity"
    tools:context="com.a_team.studentlife.navigation_drawer_fragments.FragmentLeague">

    <TextView
        android:id="@+id/user_league_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/user_league_money_value_text"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        tools:ignore="SpUsage" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/leagueShopSwipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_list_products_leagues_shop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:scrollbars="vertical" />

            <ProgressBar
                android:id="@+id/loading_spinner_store"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
